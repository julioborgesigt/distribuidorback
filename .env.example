# Configuração do Banco de Dados
DB_HOST=seu_host_aqui
DB_USER=seu_usuario_aqui
DB_PASS=sua_senha_aqui
DB_NAME=seu_banco_aqui

# Segredo da Aplicação (JWT)
# IMPORTANTE: Gere um segredo aleatório forte usando:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=seu_jwt_secret_aqui_64_caracteres_aleatorios

# Tempo de expiração do token JWT (opcional - padrão: 2h)
# Exemplos: 1h, 30m, 7d, 24h
JWT_EXPIRATION=2h

# Configuração do Servidor
PORT=3000
NODE_ENV=development

# Sequelize Alter (APENAS PARA DESENVOLVIMENTO)
# ATENÇÃO: Pode causar perda de dados! Use com cuidado.
# Descomente apenas se souber o que está fazendo:
# SEQUELIZE_ALTER=true

# URL do Frontend (para CORS)
FRONTEND_URL=http://localhost:8080
# URLs adicionais (opcional - para múltiplos ambientes)
FRONTEND_URL_2=https://distribuidorvue.onrender.com
FRONTEND_URL_3=
